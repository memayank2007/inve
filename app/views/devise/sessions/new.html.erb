<div class = "hero-unit">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
      <h2>Sign in</h2>

      <% if resource.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@channel.errors.count, "error") %> prohibited this channel from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class=>"btn btn-large btn-primary" %></div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>